<body>
    <%- include('../includes/navigation.ejs') %> 
    <main>
        <%if(orders.length<=0){ %>
            <h1>Nothing there!</h1>
        <%}
        else{%>
            <ul>
                <%
                    orders.forEach(order => { %>
                        <li>
                            <h1># <%=order._id%></h1>
                            <ul>
                                <%  order.products.forEach(({product, cnt})=>{%>
                                    <li><%=product.title%>(<%=cnt%>)</li>
                                <%  })%>
                            </ul>
                            <h2>Price: $<%=order.price%></h2>
                        </li>
                <%  }) %>
            </ul>
        <%}%>
    </main>
<%- include('../includes/end.ejs') %> 
