<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="login-form" action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                    class="<%=locals.invalid&&locals.invalid.email&&'invalid'%>" 
                    type="email" 
                    name="email" 
                    id="email" 
                    value="<%=locals.oldInput&&oldInput.email%>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    class="<%=locals.invalid&&locals.invalid.password&&'invalid'%>" 
                    type="password" 
                    name="password" 
                    id="password" 
                    value="<%=locals.oldInput&&oldInput.password%>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                    class="<%=locals.invalid&&locals.invalid.password&&'invalid'%>" 
                    type="password"
                    name="confirmPassword" 
                    id="confirmPassword" 
                    value="<%=locals.oldInput&&oldInput.confirmPassword%>">
            </div>
            <button class="btn" type="submit">Sign up</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>