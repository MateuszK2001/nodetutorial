<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %> 
    <%
        const editingMode = typeof product !== 'undefined';
        const requestPath = editingMode ? `/admin/edit-product/${product.id}` : "/admin/add-product";
        const title = editingMode ? product.title : "";
        const description = editingMode ? product.description : "";
        const price = editingMode ? product.price : "";
        const imageUrl = editingMode ? product.imageUrl : "";
    %>
    <main>
        <form class="product-form" action="<%=requestPath%>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%=title%>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea type="text" name="description" id="description" rows="5" ><%=description%></textarea>
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%=price%>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image Source</label>
                <input type="url" name="imageUrl" id="imageUrl" value="<%=imageUrl%>">
                <img id="img" style="margin: auto;width: 100%;display: block;" src="<%=imageUrl%>">
            </div>
            <button class="btn" type="submit"><%=editingMode ? "Update" : "Add Product"%></button>
        </form>
    </main>
    <script>
        const img = document.getElementById('img');
        document.getElementById('imageUrl').addEventListener("input", e=>{
            img.src = e.target.value;
        });
    </script>
<%- include('../includes/end.ejs') %> 
